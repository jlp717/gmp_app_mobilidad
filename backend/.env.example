# ====================================================================
# CONFIGURACIÓN DEL BACKEND - GMP APP UNIFIED
# ====================================================================

# ENTORNO
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# BASE DE DATOS (IBM i ODBC)
# Credenciales separadas - el DSN "GMP" debe existir en Windows ODBC
ODBC_UID=tu_usuario_ibm_i
ODBC_PWD=tu_password_ibm_i
ODBC_POOL_MIN=5
ODBC_POOL_MAX=50
ODBC_POOL_IDLE_TIMEOUT=30000
ODBC_POOL_ACQUIRE_TIMEOUT=30000

# JWT - AUTENTICACIÓN
JWT_ACCESS_SECRET=tu_secreto_jwt_super_seguro_aqui_minimo_32_caracteres_access
JWT_REFRESH_SECRET=tu_secreto_jwt_super_seguro_aqui_minimo_32_caracteres_refresh
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# REDIS - CACHING
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TTL_DEFAULT=3600
REDIS_TTL_PRODUCTS=86400
REDIS_TTL_PROMOTIONS=1800

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8081

# SEGURIDAD
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME_MINUTES=30
SESSION_TTL=3600
MAX_SESSIONS_PER_USER=5

# RATE LIMITING
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT=5
LOGIN_RATE_WINDOW=900000

# EMAIL - SMTP
SMTP_HOST=mail.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@example.com
SMTP_PASSWORD=password
SMTP_FROM=noreply@example.com

# EMPRESA
EMPRESA_NOMBRE=Granja Mari Pepa
EMPRESA_CIF=B04008710
EMPRESA_TELEFONO=639 77 86 56
EMPRESA_EMAIL=pedidos@mari-pepa.com

# FRONTEND URL (para enlaces en emails)
FRONTEND_URL=https://app.mari-pepa.com

# GOOGLE MAPS
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# LOGGING
LOG_LEVEL=info
LOG_FORMAT=combined

# CIRCUIT BREAKER
CIRCUIT_BREAKER_TIMEOUT=15000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000
